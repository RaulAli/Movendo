generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_PRODUCTS")
}

model Product {
  id          String   @id @map("_id") @default(uuid())
  brand       String
  name        String
  slug        String   @unique
  desc        String
  price       Float
  stock       Int
  images      String[]         // Array de strings (URLs o paths)
  categoryId  String
  authorId    String
  isActive    Boolean  @default(true)
  status      String   @default("PUBLISHED")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("merch_products")
}
